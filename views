      <td>
        <form method="post" action="/admin/order/<%= o.id %>/status">
          <select name="status">
            <option value="pending" <%= o.status==='pending'?'selected':'' %>>Chờ</option>
            <option value="done" <%= o.status==='done'?'selected':'' %>>Xong</option>
            <option value="cancel" <%= o.status==='cancel'?'selected':'' %>>Hủy</option>
          </select>
          <button type="submit">Cập nhật</button>
        </form>
      </td>
    </tr>
